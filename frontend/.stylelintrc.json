{
  "rules": {},
  "ignoreFiles": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "overrides": [
    {
      "files": ["src/**/*.css"],
      "customSyntax": "postcss-scss",
      "rules": {
        "at-rule-no-unknown": [true, { "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"] }],
        "property-no-unknown": [true, { "ignoreProperties": ["text-wrap"] }]
      }
    }
  ]
}
